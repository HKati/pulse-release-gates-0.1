{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GPT external detection overlay v0",
  "description": "Shadow-only overlay summarising internal vs external GPT usage by vendor/model/product.",
  "type": "object",
  "required": ["version", "created_at", "source", "summary"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Overlay version identifier (kept for v0 contract)."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when this overlay JSON was created."
    },
    "source": {
      "type": "string",
      "description": "Short string describing the overlay source (e.g. builder script name)."
    },

    "summary": {
      "type": "object",
      "description": "Top-level GPT usage summary.",
      "required": ["total_calls"],
      "properties": {
        "total_calls": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of GPT calls observed."
        },
        "internal_calls": {
          "type": "integer",
          "minimum": 0,
          "description": "Calls attributed to internal/HPC providers."
        },
        "external_calls": {
          "type": "integer",
          "minimum": 0,
          "description": "Calls attributed to external providers."
        },
        "external_share": {
          "type": "number",
          "description": "External_calls / total_calls * 100 (percentage)."
        },
        "top_vendors": {
          "type": "array",
          "description": "Top vendors by total calls (small slice for snapshot).",
          "items": {
            "$ref": "#/definitions/vendor_summary"
          }
        },
        "top_models": {
          "type": "array",
          "description": "Top models by total calls (small slice for snapshot).",
          "items": {
            "$ref": "#/definitions/model_summary"
          }
        },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },

    "breakdowns": {
      "type": "object",
      "description": "Optional detailed breakdowns (for dashboards).",
      "properties": {
        "by_vendor": {
          "type": "array",
          "items": { "$ref": "#/definitions/vendor_summary" }
        },
        "by_model": {
          "type": "array",
          "items": { "$ref": "#/definitions/model_summary" }
        },
        "by_product_line": {
          "type": "array",
          "items": { "$ref": "#/definitions/product_summary" }
        },
        "by_scenario": {
          "type": "array",
          "items": { "$ref": "#/definitions/scenario_summary" }
        }
      },
      "additionalProperties": true
    },

    "diagnostics": {
      "type": "object",
      "description": "Free-form diagnostics for log coverage, filters, etc.",
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "definitions": {
    "vendor_summary": {
      "type": "object",
      "required": ["vendor", "total_calls"],
      "properties": {
        "vendor": { "type": "string" },
        "total_calls": { "type": "integer", "minimum": 0 },
        "internal_calls": { "type": "integer", "minimum": 0 },
        "external_calls": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },

    "model_summary": {
      "type": "object",
      "required": ["vendor", "model", "total_calls"],
      "properties": {
        "vendor": { "type": "string" },
        "model": { "type": "string" },
        "total_calls": { "type": "integer", "minimum": 0 },
        "internal_calls": { "type": "integer", "minimum": 0 },
        "external_calls": { "type": "integer", "minimum": 0 },
        "product_line": { "type": "string" },
        "scenario": { "type": "string" }
      },
      "additionalProperties": true
    },

    "product_summary": {
      "type": "object",
      "required": ["product_line", "total_calls"],
      "properties": {
        "product_line": { "type": "string" },
        "total_calls": { "type": "integer", "minimum": 0 },
        "internal_calls": { "type": "integer", "minimum": 0 },
        "external_calls": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },

    "scenario_summary": {
      "type": "object",
      "required": ["scenario", "total_calls"],
      "properties": {
        "scenario": { "type": "string" },
        "total_calls": { "type": "integer", "minimum": 0 },
        "internal_calls": { "type": "integer", "minimum": 0 },
        "external_calls": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    }
  }
}

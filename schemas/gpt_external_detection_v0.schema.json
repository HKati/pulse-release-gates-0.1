{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GPT external detection overlay v0",
  "description": "Shadow-only overlay summarising internal vs external GPT usage by vendor/model/product.",
  "type": "object",
  "required": ["version", "created_at", "summary"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Overlay version identifier (kept for v0 compatibility)."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when this overlay JSON was created."
    },
    "source": {
      "type": "string",
      "description": "Optional short string describing the overlay source (e.g. builder script name)."
    },

    "input_file": {
      "type": "string",
      "description": "Path to the log file used by the current detector (kept for v0 compatibility)."
    },
    "records": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of log records processed by the detector (kept for v0 compatibility)."
    },

    "summary": {
      "type": "object",
      "description": "Top-level GPT usage summary.",
      "required": ["total_records"],
      "properties": {
        /* ----- v0 detector fields (current generator output) ----- */
        "total_records": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of log records seen by the detector."
        },
        "num_external_gpt": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of calls attributed to external GPT providers."
        },
        "num_internal": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of calls attributed to internal/HPC providers."
        },
        "num_unknown": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of calls where origin could not be classified."
        },
        "vendors": {
          "type": "array",
          "description": "Per-vendor summary emitted by the current detector.",
          "items": {
            "$ref": "#/definitions/vendor_summary"
          }
        },
        "models": {
          "type": "array",
          "description": "Per-model summary emitted by the current detector.",
          "items": {
            "$ref": "#/definitions/model_summary"
          }
        },

        /* ----- forward-looking aliases (optional) ----- */
        "total_calls": {
          "type": "integer",
          "minimum": 0,
          "description": "Alias for total_records, used by future builders."
        },
        "internal_calls": {
          "type": "integer",
          "minimum": 0,
          "description": "Alias for num_internal, used by future builders."
        },
        "external_calls": {
          "type": "integer",
          "minimum": 0,
          "description": "Alias for num_external_gpt, used by future builders."
        },
        "external_share": {
          "type": "number",
          "description": "External_calls / total_calls * 100 (percentage)."
        },
        "top_vendors": {
          "type": "array",
          "description": "Top vendors by total calls (small slice for snapshot).",
          "items": {
            "$ref": "#/definitions/vendor_summary"
          }
        },
        "top_models": {
          "type": "array",
          "description": "Top models by total calls (small slice for snapshot).",
          "items": {
            "$ref": "#/definitions/model_summary"
          }
        },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },

    "breakdowns": {
      "type": "object",
      "description": "Optional detailed breakdowns (for dashboards).",
      "properties": {
        "by_vendor": {
          "type": "array",
          "items": { "$ref": "#/definitions/vendor_summary" }
        },
        "by_model": {
          "type": "array",
          "items": { "$ref": "#/definitions/model_summary" }
        },
        "by_product_line": {
          "type": "array",
          "items": { "$ref": "#/definitions/product_summary" }
        },
        "by_scenario": {
          "type": "array",
          "items": { "$ref": "#/definitions/scenario_summary" }
        }
      },
      "additionalProperties": true
    },

    "diagnostics": {
      "type": "object",
      "description": "Free-form diagnostics for log coverage, filters, etc.",
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "definitions": {
    "vendor_summary": {
      "type": "object",
      "required": ["vendor", "total_calls"],
      "properties": {
        "vendor": { "type": "string" },
        "total_calls": { "type": "integer", "minimum": 0 },
        "internal_calls": { "type": "integer", "minimum": 0 },
        "external_calls": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },

    "model_summary": {
      "type": "object",
      "required": ["vendor", "model", "total_calls"],
      "properties": {
        "vendor": { "type": "string" },
        "model": { "type": "string" },
        "total_calls": { "type": "integer", "minimum": 0 },
        "internal_calls": { "type": "integer", "minimum": 0 },
        "external_calls": { "type": "integer", "minimum": 0 },
        "product_line": { "type": "string" },
        "scenario": { "type": "string" }
      },
      "additionalProperties": true
    },

    "product_summary": {
      "type": "object",
      "required": ["product_line", "total_calls"],
      "properties": {
        "product_line": { "type": "string" },
        "total_calls": { "type": "integer", "minimum": 0 },
        "internal_calls": { "type": "integer", "minimum": 0 },
        "external_calls": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },

    "scenario_summary": {
      "type": "object",
      "required": ["scenario", "total_calls"],
      "properties": {
        "scenario": { "type": "string" },
        "total_calls": { "type": "integer", "minimum": 0 },
        "internal_calls": { "type": "integer", "minimum": 0 },
        "external_calls": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    }
  }
}
